@model WorkloadReportViewModel

@{
    ViewData["Title"] = "Workload Report - Print";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/reports-print.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 10pt;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        .print-header {
            border-bottom: 3px solid #0d47a1;
            padding-bottom: 15px;
            margin-bottom: 25px;
        }
        .print-header h1 {
            margin: 0;
            color: #0d47a1;
            font-size: 24pt;
        }
        .report-meta {
            color: #666;
            font-size: 9pt;
            margin-top: 5px;
        }
        .section {
            page-break-inside: avoid;
            margin-bottom: 25px;
        }
        .section-header {
            background-color: #0d47a1;
            color: white;
            padding: 10px 15px;
            font-weight: bold;
            font-size: 11pt;
            margin-bottom: 15px;
            border-radius: 3px;
        }
        .alert-box {
            border-left: 4px solid;
            padding: 12px 15px;
            margin-bottom: 15px;
            background-color: #f9f9f9;
        }
        .alert-danger {
            border-left-color: #dc3545;
            background-color: #f8d7da;
        }
        .alert-warning {
            border-left-color: #ffc107;
            background-color: #fff3cd;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f5f5f5;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .summary-grid {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            gap: 15px;
            margin-bottom: 25px;
        }
        .summary-card {
            border: 1px solid #ddd;
            padding: 15px;
            background-color: #f9f9f9;
            border-radius: 3px;
        }
        .summary-card h5 {
            margin: 0 0 10px 0;
            font-size: 9pt;
            color: #666;
        }
        .summary-card .value {
            font-size: 18pt;
            font-weight: bold;
            color: #0d47a1;
        }
        .print-footer {
            margin-top: 40px;
            padding-top: 15px;
            border-top: 1px solid #ddd;
            font-size: 8pt;
            color: #999;
            text-align: center;
        }
        @@media print {
            body { margin: 0; padding: 10px; }
            .section { page-break-inside: avoid; }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="print-header">
        <h1>Workload Report</h1>
        <div class="report-meta">
            <strong>Project:</strong> @Model.ProjectName<br>
            <strong>Generated:</strong> @Model.GeneratedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt") UTC
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="summary-grid">
        <div class="summary-card">
            <h5>Team Members</h5>
            <div class="value">@Model.EmployeeWorkloads.Count</div>
        </div>
        <div class="summary-card">
            <h5>Avg Tasks/Employee</h5>
            <div class="value">@Math.Round(Model.AverageTasksPerEmployee, 1)</div>
        </div>
        <div class="summary-card">
            <h5>Most Loaded</h5>
            <div class="value" style="font-size: 12pt;">@Model.MostLoadedEmployee</div>
        </div>
        <div class="summary-card">
            <h5>Least Loaded</h5>
            <div class="value" style="font-size: 12pt;">@Model.LeastLoadedEmployee</div>
        </div>
    </div>

    <!-- Overallocation Alerts -->
    @if (Model.OverallocationAlerts.Count > 0)
    {
        <div class="section">
            <div class="section-header">Over-allocation Alerts</div>
            @foreach (var alert in Model.OverallocationAlerts)
            {
                var alertClass = alert.SeverityLevel == "High" ? "alert-danger" : "alert-warning";
                <div class="alert-box @alertClass">
                    <strong>@alert.EmployeeName</strong> - @alert.SeverityLevel Priority<br>
                    Assigned Tasks: @alert.TaskCount | Overdue: @alert.OverdueTaskCount<br>
                    <em>@alert.Recommendation</em>
                </div>
            }
        </div>
    }

    <!-- Employee Workload Summary -->
    <div class="section">
        <div class="section-header">Employee Workload Summary</div>
        <table>
            <thead>
                <tr>
                    <th>Employee</th>
                    <th>Assigned</th>
                    <th>Completed</th>
                    <th>In Progress</th>
                    <th>Overdue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var workload in Model.EmployeeWorkloads)
                {
                    <tr>
                        <td><strong>@workload.EmployeeName</strong></td>
                        <td>@workload.AssignedTaskCount</td>
                        <td>@workload.CompletedTaskCount</td>
                        <td>@workload.InProgressTaskCount</td>
                        <td>@workload.OverdueTaskCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Detailed Task Assignments -->
    @foreach (var workload in Model.EmployeeWorkloads)
    {
        <div class="section">
            <div class="section-header">@workload.EmployeeName - @workload.AssignedTaskCount Tasks</div>
            @if (workload.Tasks.Count == 0)
            {
                <p><em>No tasks assigned</em></p>
            }
            else
            {
                <table>
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Due Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in workload.Tasks.OrderBy(t => t.DueDate))
                        {
                            <tr>
                                <td>
                                    @task.TaskTitle
                                    @if (task.IsOverdue)
                                    {
                                        <strong style="color: #dc3545;"> [OVERDUE]</strong>
                                    }
                                </td>
                                <td>@task.Status</td>
                                <td>@task.Priority</td>
                                <td>@task.DueDate.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    }

    <div class="print-footer">
        Report generated on @Model.GeneratedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt") UTC
    </div>
</body>
</html>
