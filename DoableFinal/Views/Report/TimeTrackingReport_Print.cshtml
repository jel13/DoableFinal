@model TimeTrackingReportViewModel

@{
    ViewData["Title"] = "Time Tracking Report - Print";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/reports-print.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 10pt;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        .print-header {
            border-bottom: 3px solid #0d47a1;
            padding-bottom: 15px;
            margin-bottom: 25px;
        }
        .print-header h1 {
            margin: 0;
            color: #0d47a1;
            font-size: 24pt;
        }
        .report-meta {
            color: #666;
            font-size: 9pt;
            margin-top: 5px;
        }
        .section {
            page-break-inside: avoid;
            margin-bottom: 25px;
        }
        .section-header {
            background-color: #0d47a1;
            color: white;
            padding: 10px 15px;
            font-weight: bold;
            font-size: 11pt;
            margin-bottom: 15px;
            border-radius: 3px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f5f5f5;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .summary-grid {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            gap: 15px;
            margin-bottom: 25px;
        }
        .summary-card {
            border: 1px solid #ddd;
            padding: 15px;
            background-color: #f9f9f9;
            border-radius: 3px;
        }
        .summary-card h5 {
            margin: 0 0 10px 0;
            font-size: 9pt;
            color: #666;
        }
        .summary-card .value {
            font-size: 18pt;
            font-weight: bold;
            color: #0d47a1;
        }
        .print-footer {
            margin-top: 40px;
            padding-top: 15px;
            border-top: 1px solid #ddd;
            font-size: 8pt;
            color: #999;
            text-align: center;
        }
        @@media print {
            body { margin: 0; padding: 10px; }
            .section { page-break-inside: avoid; }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="print-header">
        <h1>Time Tracking Report</h1>
        <div class="report-meta">
            <strong>Project:</strong> @Model.ProjectName<br>
            @if (Model.StartDate.HasValue && Model.EndDate.HasValue)
            {
                <span><strong>Period:</strong> @Model.StartDate.Value.ToString("MMM dd, yyyy") - @Model.EndDate.Value.ToString("MMM dd, yyyy")<br></span>
            }
            <strong>Generated:</strong> @Model.GeneratedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt") UTC
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="summary-grid">
        <div class="summary-card">
            <h5>Total Hours</h5>
            <div class="value">@Math.Round(Model.TotalHours, 1)h</div>
        </div>
        <div class="summary-card">
            <h5>Tasks Tracked</h5>
            <div class="value">@Model.TaskTimes.Count</div>
        </div>
        <div class="summary-card">
            <h5>Employees</h5>
            <div class="value">@Model.EmployeeTimes.Count</div>
        </div>
        <div class="summary-card">
            <h5>Average/Task</h5>
            <div class="value">@(Model.TaskTimes.Count > 0 ? Math.Round(Model.TotalHours / Model.TaskTimes.Count, 1) : 0)h</div>
        </div>
    </div>

    <!-- Time per Task -->
    @if (Model.TaskTimes.Count > 0)
    {
        <div class="section">
            <div class="section-header">Time per Task</div>
            <table>
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Hours</th>
                        <th>% of Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.TaskTimes)
                    {
                        var percentage = Model.TotalHours > 0 ? (task.Hours / Model.TotalHours * 100) : 0;
                        <tr>
                            <td>@task.TaskTitle</td>
                            <td>@Math.Round(task.Hours, 2)h</td>
                            <td>@Math.Round(percentage, 1)%</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr style="background-color: #e9ecef; font-weight: bold;">
                        <td>TOTAL</td>
                        <td>@Math.Round(Model.TotalHours, 2)h</td>
                        <td>100%</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }

    <!-- Employee Time Summary -->
    @if (Model.EmployeeTimes.Count > 0)
    {
        <div class="section">
            <div class="section-header">Time per Employee</div>
            <table>
                <thead>
                    <tr>
                        <th>Employee</th>
                        <th>Total Hours</th>
                        <th>Tasks</th>
                        <th>Avg/Task</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model.EmployeeTimes)
                    {
                        <tr>
                            <td>@emp.EmployeeName</td>
                            <td>@Math.Round(emp.TotalHours, 2)h</td>
                            <td>@emp.TaskCount</td>
                            <td>@Math.Round(emp.AverageHoursPerTask, 2)h</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- Daily Breakdown -->
    @if (Model.DailyBreakdown.Count > 0)
    {
        <div class="section">
            <div class="section-header">Daily Breakdown</div>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Hours</th>
                        <th>Tasks</th>
                        <th>Avg/Task</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var day in Model.DailyBreakdown)
                    {
                        var avgPerTask = day.TaskCount > 0 ? day.Hours / day.TaskCount : 0;
                        <tr>
                            <td>@day.Date.ToString("ddd, MMM dd")</td>
                            <td>@Math.Round(day.Hours, 2)h</td>
                            <td>@day.TaskCount</td>
                            <td>@Math.Round(avgPerTask, 2)h</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- Weekly Breakdown -->
    @if (Model.WeeklyBreakdown.Count > 0)
    {
        <div class="section">
            <div class="section-header">Weekly Breakdown</div>
            <table>
                <thead>
                    <tr>
                        <th>Week</th>
                        <th>Hours</th>
                        <th>Tasks</th>
                        <th>Avg/Task</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var week in Model.WeeklyBreakdown)
                    {
                        var avgPerTask = week.TaskCount > 0 ? week.Hours / week.TaskCount : 0;
                        <tr>
                            <td>@week.WeekStartDate.ToString("MMM dd") - @week.WeekEndDate.ToString("MMM dd")</td>
                            <td>@Math.Round(week.Hours, 2)h</td>
                            <td>@week.TaskCount</td>
                            <td>@Math.Round(avgPerTask, 2)h</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="print-footer">
        Report generated on @Model.GeneratedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt") UTC
    </div>
</body>
</html>
