@model StatusReportViewModel

@{
    ViewData["Title"] = "Status Report - Print";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/reports-print.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 11pt;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        .print-header {
            border-bottom: 3px solid #0d47a1;
            padding-bottom: 15px;
            margin-bottom: 25px;
        }
        .print-header h1 {
            margin: 0;
            color: #0d47a1;
            font-size: 24pt;
        }
        .report-meta {
            color: #666;
            font-size: 10pt;
            margin-top: 5px;
        }
        .section {
            page-break-inside: avoid;
            margin-bottom: 25px;
        }
        .section-header {
            background-color: #0d47a1;
            color: white;
            padding: 10px 15px;
            font-weight: bold;
            font-size: 12pt;
            margin-bottom: 15px;
            border-radius: 3px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f5f5f5;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 3px;
            font-size: 9pt;
            font-weight: bold;
        }
        .badge-danger { background-color: #dc3545; color: white; }
        .badge-warning { background-color: #ffc107; color: black; }
        .badge-info { background-color: #17a2b8; color: white; }
        .badge-success { background-color: #28a745; color: white; }
        .progress {
            height: 20px;
            background-color: #e9ecef;
            border-radius: 3px;
            overflow: hidden;
        }
        .progress-bar {
            background-color: #28a745;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 9pt;
            font-weight: bold;
        }
        .print-footer {
            margin-top: 40px;
            padding-top: 15px;
            border-top: 1px solid #ddd;
            font-size: 9pt;
            color: #999;
            text-align: center;
        }
        @@media print {
            body { margin: 0; padding: 10px; }
            .section { page-break-inside: avoid; }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="print-header">
        <h1>Status Report</h1>
        <div class="report-meta">
            <strong>Project:</strong> @Model.ProjectName<br>
            <strong>Generated:</strong> @Model.GeneratedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt") UTC<br>
            <strong>Completion:</strong> @Math.Round(Model.CompletionPercentage, 1)%
        </div>
    </div>

    <!-- Summary Section -->
    <div class="section">
        <div class="section-header">Summary</div>
        <table>
            <tr>
                <th>Completed Tasks</th>
                <th>In Progress</th>
                <th>Upcoming</th>
                <th>Total Tasks</th>
            </tr>
            <tr>
                <td>@Model.CompletedTasks.Count</td>
                <td>@Model.InProgressTasks.Count</td>
                <td>@Model.UpcomingTasks.Count</td>
                <td>@Model.TotalTasks</td>
            </tr>
        </table>
    </div>

    <!-- Progress Bar Section -->
    <div class="section">
        <div class="section-header">Overall Progress</div>
        <div class="progress">
            <div class="progress-bar" style="width: @Model.CompletionPercentage%;">
                @Math.Round(Model.CompletionPercentage, 1)%
            </div>
        </div>
    </div>

    <!-- Completed Tasks -->
    @if (Model.CompletedTasks.Count > 0)
    {
        <div class="section">
            <div class="section-header">Completed Tasks (@Model.CompletedTasks.Count)</div>
            <table>
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Priority</th>
                        <th>Due Date</th>
                        <th>Completed Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.CompletedTasks.OrderByDescending(t => t.CompletedAt))
                    {
                        <tr>
                            <td>@task.Title</td>
                            <td>
                                <span class="badge badge-@GetPriorityClass(task.Priority)">@task.Priority</span>
                            </td>
                            <td>@task.DueDate.ToString("MMM dd, yyyy")</td>
                            <td>@(task.CompletedAt?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- In Progress Tasks -->
    @if (Model.InProgressTasks.Count > 0)
    {
        <div class="section">
            <div class="section-header">In Progress Tasks (@Model.InProgressTasks.Count)</div>
            <table>
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Priority</th>
                        <th>Due Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.InProgressTasks.OrderBy(t => t.DueDate))
                    {
                        var isOverdue = task.DueDate < DateTime.UtcNow;
                        <tr>
                            <td>@task.Title</td>
                            <td>
                                <span class="badge badge-@GetPriorityClass(task.Priority)">@task.Priority</span>
                            </td>
                            <td>@task.DueDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (isOverdue)
                                {
                                    <span class="badge badge-danger">OVERDUE</span>
                                }
                                else
                                {
                                    <span class="badge badge-info">On Schedule</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- Upcoming Tasks -->
    @if (Model.UpcomingTasks.Count > 0)
    {
        <div class="section">
            <div class="section-header">Upcoming Tasks (@Model.UpcomingTasks.Count)</div>
            <table>
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Priority</th>
                        <th>Due Date</th>
                        <th>Days Until Due</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.UpcomingTasks.OrderBy(t => t.DueDate))
                    {
                        var daysUntilDue = (int)(task.DueDate - DateTime.UtcNow).TotalDays;
                        <tr>
                            <td>@task.Title</td>
                            <td>
                                <span class="badge badge-@GetPriorityClass(task.Priority)">@task.Priority</span>
                            </td>
                            <td>@task.DueDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (daysUntilDue < 7)
                                {
                                    <span class="badge badge-danger">@daysUntilDue days</span>
                                }
                                else if (daysUntilDue < 14)
                                {
                                    <span class="badge badge-warning">@daysUntilDue days</span>
                                }
                                else
                                {
                                    <span>@daysUntilDue days</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="print-footer">
        Report generated on @Model.GeneratedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt") UTC
    </div>
</body>
</html>

@functions {
    string GetPriorityClass(string priority)
    {
        return priority switch
        {
            "High" => "danger",
            "Medium" => "warning",
            "Low" => "info",
            _ => "secondary"
        };
    }
}
